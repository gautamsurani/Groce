<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp"
    android:animateLayoutChanges="true"
    app:contentPadding="7dp"
    android:id="@+id/secCard"
    app:cardMaxElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/facebook"
            android:id="@+id/sectionIMG"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/text_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sectionIMG"
            android:layout_toEndOf="@+id/sectionIMG"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="333333333333333333"
            android:layout_toLeftOf="@+id/toggle_button_section"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/toggle_button_section"
            android:textColor="@color/black"
            android:textSize="14dp" />


        <ToggleButton
            android:id="@+id/toggle_button_section"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/toggleButton"
            android:background="@drawable/ic_toggle_bg"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>