<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/liContactUs"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relontact"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_below="@+id/appBarLayout"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relontact"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="18dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_map_contact"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8.3"

            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800"
            android:padding="1dp"
            android:layout_margin="3dp"
            android:id="@+id/tvAddone" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800"

            android:padding="1dp"
            android:layout_margin="3dp"
            android:id="@+id/tvAddtwo" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800"

            android:padding="1dp"
            android:layout_margin="3dp"
            android:id="@+id/tvAddthree" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:src="@drawable/ic_website_contact"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8.3"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/material_grey_800"
            android:autoLink="web"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:id="@+id/tvAddwebsite" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/black"
                android:src="@drawable/ic_time_contact"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:autoLink="web"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:id="@+id/tvAddTimings" />
        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_mobile_contact"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:id="@+id/tvAddphone" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"

                android:src="@drawable/ic_email_contact"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8.3"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/material_grey_800"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:text=""
                android:autoLink="email"
                android:id="@+id/tvAddemail" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL NOW"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/btnCallnow" />
    </RelativeLayout>

</RelativeLayout>
