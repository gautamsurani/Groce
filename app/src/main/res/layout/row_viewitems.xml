<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:id="@+id/lisWishlist"
            android:background="@color/cattextcolour"
            android:padding="4dp">


            <LinearLayout
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <TextView

                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Name" />
                    <TextView
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tvviewtitle"
                        android:maxLines="2"
                        android:textColor="@color/divider"
                        android:textSize="@dimen/fab_margin"

                        android:layout_width="0dp"
                        android:layout_weight="6.9"
                        android:layout_height="wrap_content"
                        android:text="Cucumber" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Quantity" />
                    <TextView
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tvviewQuanityt"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="6.9"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:singleLine="true"
                        android:textColor="@color/divider" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Unit Price" />
                    <TextView
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tvviewUnitPrice"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="6.9"
                        android:singleLine="true"

                        android:text="\u20B9 14"
                        android:layout_height="wrap_content"

                        android:textColor="@color/divider"
                        />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Total" />

                    <TextView
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tvviewTotal"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/fab_margin"
                        android:layout_width="0dp"
                        android:layout_weight="6.9"
                        android:singleLine="true"


                        android:layout_height="wrap_content"
                        android:text="\u20B9 28"
                        android:textColor="@color/divider"
                        />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>