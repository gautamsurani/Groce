<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginStart="1dp"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="1dp"
    app:contentPaddingRight="1dp">

    <LinearLayout
        android:id="@+id/lvProductLayout"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:paddingEnd="0dp"
                android:paddingLeft="3dp"
                android:paddingRight="0dp"
                android:paddingStart="3dp">

                <ImageView
                    android:id="@+id/imgAddtoWishlist"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="start"
                    android:src="@drawable/f0" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSoldOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Sold Out"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lvDiscountbg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="7dp"
                android:layout_marginStart="14dp"
                android:layout_weight="0.7"
                android:background="@drawable/discountbg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="30%"
                    android:textColor="#fff"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:background="#99e2e2e2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:maxLines="1"
                android:text="Canvera Black Heel"
                android:textColor="@color/colorText"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/titleinHindi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:maxLines="1"
                android:text="Canvera Black Heel"
                android:textColor="@color/colorText"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="3dp"
                android:gravity="bottom|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="1200 Rs"
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/cutprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="bottom"
                    android:text="250 Rs"
                    android:textColor="@color/red"
                    android:textSize="9dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pOptions"
                        android:layout_width="121dp"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/option_custom"
                        android:drawableEnd="@drawable/bottom"
                        android:drawableRight="@drawable/bottom"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingLeft="2dp"
                        android:paddingStart="2dp"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/pOptionsSingleWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:text="1 KG"
                        android:textColor="@color/colorText"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tvListSoldOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:padding="1dp"
                        android:text="Sold Out"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/pAddcartbtn"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/cartnumberbg"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Add"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:visibility="gone" />


                    <LinearLayout

                        android:id="@+id/addingitemLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/cartnumberbg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        >

                        <ImageView
                            android:id="@+id/minusItem"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:src="@drawable/minuslist" />

                        <TextView
                            android:id="@+id/itmQUAN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="2"
                            android:paddingLeft="7dp"

                            android:paddingRight="7dp"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/plusItem"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/plustlist" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
