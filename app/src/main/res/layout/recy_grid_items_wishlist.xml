<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/option_custom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lvListlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:baselineAligned="false"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30% off"
                    android:gravity="center_vertical"

                    android:textColor="@color/red"
                    android:textSize="11dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_cartdelete" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pImg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />

        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/pTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:text="Canvera Black Heel"
                android:textColor="@color/colorText"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/pSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:maxLines="1"
                android:text="Canvera Black Heel"
                android:textColor="@color/colorText"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="1200 Rs"

                    android:gravity="bottom"
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/lPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:text="250 Rs"
                    android:textColor="@color/red"
                    android:textSize="9dp" />

            </LinearLayout>
            <LinearLayout

                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pOptions"
                        android:layout_width="121dp"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/option_custom"
                        android:drawableEnd="@drawable/bottom"
                        android:drawableRight="@drawable/bottom"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:layout_marginBottom="3dp"
                        android:paddingLeft="2dp"
                        android:paddingStart="2dp"
                        android:text="1 KG- Rs 20888"
                        android:textSize="10dp" />


                    <TextView
                        android:layout_marginBottom="2dp"
                        android:visibility="gone"
                        android:id="@+id/pOptionsSingleWeight"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="22dp"
                        android:maxLines="1"
                        android:textColor="@color/colorText"
                        android:textSize="13dp"
                        android:text="1 KG"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvListSoldOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:padding="1dp"
                        android:layout_marginTop="5dp"
                        android:text="Sold Out"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        />

                    <Button
                        android:visibility="gone"
                        android:layout_marginTop="2dp"
                        android:id="@+id/pAddcartbtn"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="bottom"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/cartnumberbg"
                        android:text="Add"
                        android:textSize="12dp"
                        android:textColor="@color/cardview_light_background"
                        android:textStyle="normal"

                        />

                    <LinearLayout

                        android:layout_marginTop="2dp"
                        android:id="@+id/addingitemLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/cartnumberbg"
                        android:gravity="center"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/minusItem"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:src="@drawable/minuslist" />

                        <TextView
                            android:id="@+id/itmQUAN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="2"
                            android:textStyle="bold"

                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/plusItem"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:src="@drawable/plustlist" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
